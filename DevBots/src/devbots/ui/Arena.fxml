<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="devbots.ui.ArenaController">
   <center>
      <HBox>
         <children>
            <Pane fx:id="pnArenaPane" prefHeight="1024.0" prefWidth="1024.0" />
            <VBox fx:id="vboxBots" fillWidth="true" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Menu">
            <items>
              <MenuItem fx:id="mniStartSim" mnemonicParsing="false" onAction="#startSim" text="Start Simulation" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
